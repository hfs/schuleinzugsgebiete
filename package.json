  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "jquery": "^3.2.1",
    "leaflet": "^1.0.3",
    "tachyons": "^4.7.4"
  },
  "scripts": {
    "postinstall": "scripts/copy-deps && node-sass scss/styles.scss resources/schuleinzugsgebiete/public/css/styles.css --output-style compressed && babel js/app.js --out-file resources/schuleinzugsgebiete/public/js/app.js",
    "watch-js": "babel -w js/app.js --out-file resources/schuleinzugsgebiete/public/js/app.js --source-maps"
    "build-css": "lessc --clean-css less/styles.less resources/schuleinzugsgebiete/public/css/styles.css",
    "watch-css": "watch 'npm run-script build-css' less",
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "less": "^2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "watch": "^1.0.2"
  }
